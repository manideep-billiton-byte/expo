# Backend environment variables for real email/SMS integration

# Server
PORT=5000
INVITE_LINK_BASE=https://app.example.com/invite

# Postgres
# Option A: single URL
# DATABASE_URL=postgres://postgres:password@localhost:5432/expo_db
#
# Option B: individual vars
PGHOST=localhost
PGPORT=5432
PGUSER=postgres
PGPASSWORD=password
PGDATABASE=expo_db
# Set to 'require' if your Postgres requires SSL (e.g. cloud providers)
PGSSLMODE=disable

# SMTP (for nodemailer)
# If you use Gmail SMTP with an app password, set SMTP_SECURE=true and SMTP_PORT=465
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_smtp_user
SMTP_PASS=your_smtp_password
SMTP_FROM="Your App <no-reply@example.com>"

# Twilio (for SMS)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_FROM=+1234567890
